# Etapa de construcción
FROM node:20-alpine AS builder

WORKDIR /app

# Instalar dependencias del sistema necesarias para Prisma
RUN apk add --no-cache openssl libc6-compat

# Copiar archivos de configuración
COPY package*.json ./
COPY prisma ./prisma/

# Instalar todas las dependencias (incluyendo devDependencies para la construcción)
RUN npm ci

# Generar cliente de Prisma
RUN npx prisma generate

# Copiar el código fuente
COPY . .

# Construir la aplicación Next.js
RUN npm run build

# Etapa de producción
FROM node:20-alpine AS production

WORKDIR /app

# Instalar dependencias del sistema para producción
RUN apk add --no-cache openssl libc6-compat

# Copiar archivos de configuración
COPY package*.json ./
COPY prisma ./prisma/

# Instalar solo dependencias de producción
RUN npm ci --omit=dev && npm cache clean --force

# Copiar artefactos de construcción desde la etapa builder
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/next.config.* ./

# Generar cliente Prisma para producción
RUN npx prisma generate

# Crear directorio para uploads
RUN mkdir -p /app/uploads

# Exponer puerto
EXPOSE 3000

# Variables de entorno de Next.js
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Comando directo sin script
CMD npx prisma migrate deploy && npm start